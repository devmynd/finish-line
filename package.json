{
  "name": "finish-line",
  "version": "0.0.3",
  "description": "Helpful components and tools to build React and Relay applications more quickly and easily",
  "main": "index.js",
  "module": "es/index.js",
  "files": [
    "createEnvironment.js",
    "createFetchQuery",
    "es",
    "index.js",
    "RelayEnvironmentProvider.js",
    "RelayRenderer.js",
    "relayRendererFactory.js",
    "withRelayEnvironment.js"
  ],
  "babel": {
    "presets": [
      "./tools/babel-preset"
    ]
  },
  "scripts": {
    "build": "node ./tools/build.js",
    "clean:light": "git clean -fdx . -e node_modules",
    "clean:hard": "git clean -fdX",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "yarn lint && yarn test"
  },
  "keywords": [
    "react",
    "relay",
    "component"
  ],
  "author": "Michael Crismali",
  "license": "MIT",
  "dependencies": {
    "hoist-non-react-statics": "^2.3.1",
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "react": ">=15",
    "react-relay": ">=1.1",
    "relay-runtime": ">=1.1"
  },
  "jest": {
    "clearMocks": true,
    "resetModules": true,
    "rootDir": "src",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "../node_modules/jest-enzyme/lib/index.js",
    "setupFiles": [
      "../jest/setup.js"
    ],
    "modulePaths": [
      "<rootDir>/../jest/"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "gzip-size": "^3.0.0",
    "jest": "^21.0.1",
    "jest-enzyme": "^3.8.2",
    "jest-fetch-mock": "^1.2.1",
    "lodash": "^4.17.4",
    "pretty-bytes": "^4.0.2",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-relay": "^1.3.0",
    "react-test-renderer": "^15.6.1",
    "relay-compiler": "^1.3.0",
    "relay-runtime": "^1.3.0",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "whatwg-fetch": "^2.0.3"
  }
}
